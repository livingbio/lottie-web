<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  ExtensionBundleName="LottieFiles"
  ExtensionBundleId="com.lottiefiles"
  ExtensionBundleVersion="0.1.20"
  Version="5.0">
  <Author>Design Barn Inc.</Author>
  <ExtensionList>
    <Extension Id="com.lottiefiles.panel" Version="1.0.0" />
    <Extension Id="com.lottiefiles.server" Version="1.0.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <!-- AfterEffects -->
      <Host Name="AEFT" Version="[13.0,17.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="5.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.lottiefiles.panel">
      <DispatchInfo >
        <Resources>
          <MainPath>./index.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
            <Parameter>--enable-media-stream</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>LottieFiles</Menu>
          <Geometry>
            <Size>
              <Height>640</Height>
              <Width>480</Width>
            </Size>
          </Geometry>
          <Icons />
        </UI>
      </DispatchInfo>
    </Extension>
    <Extension Id="com.lottiefiles.server">
      <DispatchInfo >
        <Resources>
          <MainPath>./index_server.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>false</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Custom</Type>
          <Geometry>
            <Size>
              <Height>100</Height>
              <Width>100</Width>
            </Size>
          </Geometry>
          <Icons />
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
